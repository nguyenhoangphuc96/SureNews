<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/transparent</item>
        <item name="colorPrimaryDark">@color/colorBackgroundToolbarBlue</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextTitleGlobalWhite" parent="">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/colorWhite</item>
    </style>
    <style name="TextTabName" parent="@style/TextAppearance.Design.Counter">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorGrayforText</item>
    </style>
    <style name="TextTitleNews" parent="TextAppearance.Design.Counter">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextSubTitleNews" parent="TextAppearance.Design.Counter">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTextDecriptionGray</item>
    </style>


</resources>
